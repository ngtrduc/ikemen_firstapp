<header class="navbar navbar-fixed-top navbar-inverse">
  <div id="nav-bar">
    <div class = "logo">
      <%= link_to image_tag("/images/logo.png", class: "img-circle", height: "50", width: "60"), root_path %>
    </div>
    <div>
      <%= form_tag search_path, method: :get do%>
      <div class ="search">
        <span class = "select-label">Tìm kiếm</span>
        <%= text_field_tag :search, params[:search], placeholder: "nhap tim kiem ..." %>
        <%= submit_tag "Search", name: nil, class: "hide" %>

      </div>
      <div class = "location">
        <%= select_tag :search_by, options_for_select([['Images','1'],['Users','2']]), class: "form-control" %>
      <% end %>
    </div>
    <div class = "nav-right">
      <% if !user_signed_in? %>
      <%= link_to " Sign Up", new_user_registration_path, class: "vitri2 btn btn-primary glyphicon glyphicon-edit"%> 
      <%= link_to " Log In", new_user_session_path,class: "btn btn-primary glyphicon glyphicon-log-in"%>
    <%else%>
      <div class="mylogo dropdown">
        <a href='#'  data-toggle="modal" data-target="#myModal" title="Upload!">
          <img class="img-circle" src="/images/upload.png" alt="upload" height="38" width="38" style="margin-right: 10px;"> 
        </a>
        <a href='#' class="dropdown-toggle tootip" data-toggle="dropdown" title= <%=current_user.email%>>
          <%= image_tag(current_user.avatar.url(:thumb), class: "img-circle",height: "38", width: "38") %>
        </a>
        <ul class="dropdown-menu">
              <li><%= link_to "Profile", user_path %></li>
              <li><%= link_to "Settings", edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
      </div>

    <%end%>
    </div>
  </div>
</header>