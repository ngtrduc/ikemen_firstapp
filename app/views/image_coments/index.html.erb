<p id="notice"><%= notice %></p>

<h1>Listing Image Coments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Image</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_coments.each do |image_coment| %>
      <tr>
        <td><%= image_coment.user_id %></td>
        <td><%= image_coment.image_id %></td>
        <td><%= image_coment.comment %></td>
        <td><%= link_to 'Show', image_coment %></td>
        <td><%= link_to 'Edit', edit_image_coment_path(image_coment) %></td>
        <td><%= link_to 'Destroy', image_coment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

